    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your score: "
        android:id="@+id/tvScore"
        android:textStyle="bold"
        android:textColor="#ffbcaa0d"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffbcaa0d"
        android:textStyle="bold"
        android:id="@+id/tvScoreForThisRoundID"
        android:layout_toRightOf="@+id/tvScore"
        android:layout_toEndOf="@+id/tvScore"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignBottom="@+id/tvScore" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvYGC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/tvPlayersCorrectWords"
        android:textColor="#ffbcaa0d"
        android:textStyle="bold"/>

    <TextView
        android:text="All possible words:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPlayersCorrectWords"
        android:layout_toRightOf="@+id/tvPlayersCorrectWords"
        android:layout_toEndOf="@+id/tvPlayersCorrectWords"
        android:layout_marginTop="44dp"
        android:id="@+id/tvVWD"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffbcaa0d"
        android:textStyle="bold"/>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvVWD"
        android:layout_toRightOf="@+id/tvPlayersCorrectWords"
        android:layout_toEndOf="@+id/tvPlayersCorrectWords"
        android:id="@+id/tvListOfPossibleWordsID" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Play again"
        android:id="@+id/btnNextRoundID"
        android:clickable="true"
        android:textColor="#f4fbfd24"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tvListOfPossibleWordsID"
        android:layout_toEndOf="@+id/tvListOfPossibleWordsID" />

    <TextView
        android:text="Words you got correct:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/tvYGC"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffbcaa0d"
        android:textStyle="bold"
        android:layout_below="@+id/tvScore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Quit"
        android:id="@+id/btnEndGameID"
        android:clickable="true"
        android:textColor="#f4fbfd24"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvYGC"
        android:layout_toEndOf="@+id/tvPlayersCorrectWords"
        android:id="@+id/textViewFoundWordsID"
        android:layout_toRightOf="@+id/tvPlayersCorrectWords" />


</RelativeLayout>
