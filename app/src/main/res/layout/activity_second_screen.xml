<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/alpha4"
    tools:context="com.example.swathi.gameboggle.SecondScreen">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_difficulty_level"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:id="@id/textViewChooseDifficulty"/>
    <Button
        android:text="Start Multiplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerMultiId"
        android:layout_alignLeft="@+id/buttonSubmitSecScreenId"
        android:layout_alignStart="@+id/buttonSubmitSecScreenId"
        android:layout_marginTop="43dp"
        android:id="@+id/multiButtonSubmitSecScreenId" />

    <RadioGroup
        android:id="@+id/radioGroupDifficultyLevelID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/textViewChooseDifficulty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/radioEasyID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Easy"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioNormalID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Normal" />
        <RadioButton
            android:id="@+id/radioDifficultID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Difficult" />

    </RadioGroup>

</RelativeLayout>
