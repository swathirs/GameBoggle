<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_multiplayer_normal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/alpha4"
    tools:context="com.example.swathi.gameboggle.MultiplayerNormal">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MultiplayerNormal"
        android:background="@drawable/alpha4"
        android:id="@+id/RL_Connect">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_button"
            android:layout_marginTop="38dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="Be Client"
            android:visibility="visible" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PairedList"
            android:layout_below="@+id/search_button"
            android:layout_marginTop="52dp"
            android:layout_alignParentBottom="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HostBtn"
            android:layout_alignTop="@+id/search_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Be Server" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Play"
            android:layout_below="@+id/HostBtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Let's play!"
            android:layout_alignRight="@+id/checkScores"
            android:layout_alignEnd="@+id/checkScores" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/score"
            android:layout_marginBottom="184dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Scores"
            android:id="@+id/checkScores"
            android:layout_alignBottom="@+id/Play"
            android:layout_alignLeft="@+id/search_button"
            android:layout_alignStart="@+id/search_button"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>
