<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.swathi.gameboggle.HighScores">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Round number: "
        android:id="@+id/tvRN"
        android:textColor="#ffbcaa0d"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBottom="@+id/tvRN"
        android:layout_toRightOf="@+id/tvRN"
        android:layout_toEndOf="@+id/tvRN"
        android:textColor="#ffbcaa0d"
        android:textStyle="bold"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:id="@+id/tvRoundNumberID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your score: "
        android:id="@+id/tvScore"
        android:textStyle="bold"
        android:textColor="#ffbcaa0d"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBottom="@+id/tvScore"
        android:textColor="#ffbcaa0d"
        android:textStyle="bold"
        android:id="@+id/tvScoreForThisRoundID" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvYGC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/tvPlayersCorrectWords"
        android:textColor="#ffbcaa0d"
        android:textStyle="bold"/>

    <TextView
        android:text="Other possible words:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPlayersCorrectWords"
        android:layout_toRightOf="@+id/tvPlayersCorrectWords"
        android:layout_toEndOf="@+id/tvPlayersCorrectWords"
        android:layout_marginTop="44dp"
        android:id="@+id/tvVWD"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffbcaa0d"
        android:textStyle="bold"/>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvVWD"
        android:layout_toRightOf="@+id/tvPlayersCorrectWords"
        android:layout_toEndOf="@+id/tvPlayersCorrectWords"
        android:id="@+id/tvListOfPossibleWordsID" />

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Next Round"
            android:id="@+id/btnNextRoundID"
            android:clickable="true"
            android:textColor="#f4fbfd24"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tvListOfPossibleWordsID"
            android:layout_toEndOf="@+id/tvListOfPossibleWordsID" />

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="End Game"
            android:id="@+id/btnEndGameID"
            android:clickable="true"
            android:textColor="#f4fbfd24"
            android:textStyle="bold"
        android:layout_alignBaseline="@+id/btnNextRoundID"
        android:layout_alignBottom="@+id/btnNextRoundID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Words you got correct:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/tvYGC"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffbcaa0d"
        android:textStyle="bold"
        android:layout_below="@+id/tvScore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
