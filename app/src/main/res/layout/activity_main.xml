<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/alpha4"
    tools:context="com.example.swathi.gameboggle.MainActivity">


    <Button
        android:text="High Scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonHighScoresId"
        android:layout_marginTop="24dp"
        android:background="@android:color/holo_blue_light"
        android:padding="20dp"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_below="@+id/buttonMultiPlayerModeID"
        android:layout_alignLeft="@+id/buttonMultiPlayerModeID"
        android:layout_alignStart="@+id/buttonMultiPlayerModeID"
        android:layout_alignRight="@+id/buttonMultiPlayerModeID"
        android:layout_alignEnd="@+id/buttonMultiPlayerModeID"
        android:elevation="0dp" />

    <Button
        android:text="Multiplayer"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMultiPlayerModeID"
        android:background="@android:color/holo_blue_light"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:elevation="0dp"
        android:textSize="16sp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible" />

    <Button
        android:text="@string/single_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSinglePlayerId"
        android:background="@android:color/holo_blue_light"
        android:padding="20dp"
        android:textSize="16sp"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/buttonMultiPlayerModeID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="0dp" />

    <TextView
        android:text="@string/boggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="46sp"
        android:id="@+id/textView5"
        android:fontFamily="serif"
        android:textColor="@android:color/holo_orange_dark"
        android:shadowColor="@android:color/holo_blue_bright"
        android:layout_marginBottom="25dp"
        android:textAlignment="center"
        android:layout_above="@+id/buttonSinglePlayerId"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

    <Button
        android:text="Help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonHelpId"
        android:padding="20dp"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/buttonHighScoresId"
        android:layout_centerHorizontal="true"
        android:textSize="16sp" />


</RelativeLayout>
